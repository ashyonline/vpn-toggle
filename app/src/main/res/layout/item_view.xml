<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginLeft="@dimen/material_horizontal_margin"
    android:layout_marginRight="@dimen/material_horizontal_margin"
    android:layout_marginTop="@dimen/material_horizontal_margin"
    android:background="@color/primary_light"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/item_view_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginLeft="@dimen/material_horizontal_margin"
        android:src="@drawable/ic_thumbnail"/>

    <CheckBox
        android:id="@+id/item_checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/material_horizontal_margin"
        android:singleLine="false"
        android:gravity="start"/>
</LinearLayout>